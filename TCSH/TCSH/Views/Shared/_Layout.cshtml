@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
        <title style="font-family: Georgia, serif;">TSH</title>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" href="~/image/logo.jpg" class="rounded-circle" sizes="32x32">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TCSH.styles.css" asp-append-version="true" />
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
	<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
	<link href="~/lib/aos/aos.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
          
            <div class="container-fluid">
                @if (SignInManager.IsSignedIn(User))
                {
                 <!--   <a class="navbar-brand" asp-action="Index" asp-controller="Home" style="font-family: 'Brush Script MT', cursive;">TSH</a>
                -->
                    <a class="logo" asp-action="Index" asp-controller="Home" style="font-family: 'Brush Script MT', cursive;">
                            <img src="~/image/logo.jpg" class="rounded-circle" width="120" alt="hexashop ecommerce templatemo" />
							
                        </a>
                }
                else
                {
                        <a class="navbar-brand" asp-area="Identity" asp-page="/Account/Login" style="font-family: 'Brush Script MT', cursive;">
                   <img src="~/image/logo.jpg" class="rounded-circle" width="120" alt="hexashop ecommerce templatemo" />
						</a>
                        }
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Clothes" asp-action="Index" style="font-size:large"><i class="bi bi-file-earmark-text"></i> My Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TypeOfClothes" asp-action="Index" style="font-size:large"><i class="bi bi-gear"></i> Type of Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="TypeOfAges" asp-action="Index" style="font-size:large"><i class="bi bi-gear"></i> Type of Ages</a>
                            </li>
                        }
                      
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TSH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/bootbox.js/bootbox.js"></script>
	<script src="~/lib/bootbox.js/bootbox.min.js"></script>
	<script src="~/lib/aos/aos.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
  AOS.init();
</script>
</body>
</html>
