@model IEnumerable<Clothe>

@{
    ViewData["Title"] = "Index";
   
}


<div class="alert alert-dark" role="alert">
    <p class="d-flex justify-content-center" style="font-size:larger">My Products</p>
</div>
<p>
    <a class="btn btn-dark" asp-action="Create"> <i class="bi bi-plus-circle"></i> Create New</a>
</p>

@{if (ViewBag.success !=null)
{
    <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-diamond"></i> There are no products yet!
        </div>
        
    }else{
         <div id="_alert" class="alert alert-danger alert-dismissible fade show d-none" role="alert">
	Item deleted successfully.
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
        <div class="row">
            @foreach (var item in Model)
            {
                            <div class="col-sm-3" >
                    <div class="card shadow-lg float " style="width: 18rem;">
                        @if (item.productImage != null)
                        {
                                <img alt="image profile" class="card-img-top" src="data:image*;base64,@(Convert.ToBase64String(item.productImage))" />
                        }<div class="card-body ">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a asp-action="Edit" asp-route-id="@item.ClotheId" class="btn btn-dark">Edit</a>
                            <a href="javascript:;" data-id="@item.ClotheId" class="btn btn-danger Deletme">Delete</a>
                            </div>
                        </div>
                            </div>
            }
        </div>

}}


@section Scripts{
      <script>
      $(document).ready(function(){
          $(".Deletme").on("click",function(){
              let b=$(this);
             bootbox.confirm({
        message: 'This is a confirm with custom button text and color! Do you like it?',
        buttons: {
            confirm: {
                label: 'Yes',
                className: 'btn-success'
            },
            cancel: {
                label: 'No',
                className: 'btn-danger'
            }
        },
        callback: function (result) {
           if(result){
                            $.ajax({
                            url:'Api/Delete/?id='+b.data('id'),
                            method:'DELETE',
                            success:function(){
                                        //b.parents('.Card').fadeOut();
                                                b.closest('.card').fadeOut();
                                $('#_alert').removeClass('d-none');
                                        setTimeout(function () { $('#_alert').addClass('d-none'); },3000);
                            },
                            error:function(){
                                alert("there is an error");
                            }

                            });
                        }
        }
    });
          });
      });
      </script>
}

